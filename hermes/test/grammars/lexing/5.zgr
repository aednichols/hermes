grammar {
  lexer<python> {
    r'\s+' -> null
    r'{' -> :lbrace @test
    mode<test> {
      r'\s+' -> null
      r'[a-z]' -> :letter
      r'[0-9]' -> :number
      r'}' -> :rbrace %pop
    }
  }
  lexer<javascript> {
    "\\s+" -> null
    "\\{" -> :lbrace @test
    mode<test> {
      "\\s+" -> null
      "[a-z]" -> :letter
      "[0-9]" -> :number
      "\}" -> :rbrace %pop
    }
  }
  lexer<c> {
    "\\s+" -> null
    "\\{" -> :lbrace @test
    mode<test> {
      "\\s+" -> null
      "[a-z]" -> :letter
      "[0-9]" -> :number
      "\\}" -> :rbrace %pop
    }
  }
  lexer<java> {
    "\\s+" -> null
    "\\{" -> :lbrace @test
    mode<test> {
      "\\s+" -> null
      "[a-z]" -> :letter
      "[0-9]" -> :number
      "\\}" -> :rbrace %pop
    }
  }
}
